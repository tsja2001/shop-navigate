.shopGroupSearchResult {
  border: 3px solid #ffa600;
  animation: borderColorChange 1s ease-in-out infinite alternate;
  box-shadow: 0 0 15px 0 #a48c01;
}
.shopGroupSearchResult .title {
  font-weight: 800;
}
@keyframes borderColorChange {
  from {
    border-color: #ffa600;
  }
  to {
    border-color: #ff0000;
  }
}
.shopGroup {
  width: 200px;
  box-sizing: border-box;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 10px;
}
.shopGroup .title {
  font-size: 20px;
  font-weight: 600;
  padding: 10px;
}
.shopGroup .content {
  display: grid;
  grid-gap: 3px;
  width: 100%;
  justify-content: center;
  box-sizing: border-box;
  gap: 3px;
  padding: 0 7px;
}
.shopGroup .content .item {
  font-size: 16px;
  padding: 2px 0;
  width: 186px;
  background-color: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 5px;
  border-radius: 10px;
  cursor: pointer;
}
.shopGroup .content .active {
  background-color: rgba(255, 255, 255, 0.3);
}
.shopGroup .content .shopItemSearchResult {
  background-color: rgba(213, 230, 21, 0.3);
}
.shopGroup .content .itemName {
  display: flex;
  align-items: center;
  gap: 5px;
}
.shopGroup .content .itemName .positionInfo {
  display: inline-flex;
  align-items: center;
  margin-left: 5px;
  font-size: 12px;
  color: #666;
}
.shopGroup .content .itemName .copyBtn {
  padding: 0 4px;
  height: auto;
  min-width: auto;
}
.redCheckbox :global .ant-checkbox-checked .ant-checkbox-inner {
  background-color: red;
  border-color: red;
}
.redCheckbox :global .ant-checkbox-checked::after {
  border-color: red;
}
.redCheckbox :global .ant-checkbox-wrapper:hover .ant-checkbox-inner,
.redCheckbox :global .ant-checkbox:hover .ant-checkbox-inner,
.redCheckbox :global .ant-checkbox-input:focus + .ant-checkbox-inner {
  border-color: red;
}
